generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}


model FundingVault {
  id                  Int         @id @default(autoincrement())
  description         String
  creatorAddress      String
  amountFundingTokens Int
  amountVotingTokens  Int
  fundingTokenAddress String @default("0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238")
  votingTokenAddress  String @default("0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238")
  vaultAddress        String
  proposals           Proposal[]

  @@index([creatorAddress])
}

model Proposal {
  id                 Int         @id @default(autoincrement())
  description        String
  proposerAddress    String
  minRequestAmount   Int
  maxRequestAmount   Int
  recipient          String
  fundingVaultId     Int
  fundingVault       FundingVault @relation(fields: [fundingVaultId], references: [id])

  @@index([proposerAddress])
  @@index([fundingVaultId])
}